# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/acm_manager"

# Authentication
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# External APIs
SITELINK_API_URL="https://api.sitelink.com"
SITELINK_API_KEY="your-sitelink-api-key"

# Monitoring and Error Tracking
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ORG="your-org"
SENTRY_PROJECT="your-project"

# Performance Monitoring
INFLUXDB_URL="https://your-influxdb-instance.com"
INFLUXDB_TOKEN="your-influxdb-token"
INFLUXDB_ORG="your-org"
INFLUXDB_BUCKET="performance-metrics"

# Google Analytics
GA_MEASUREMENT_ID="G-XXXXXXXXXX"
GA_API_SECRET="your-ga-api-secret"

# Notifications
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"

# Feature Flags
FEATURE_FLAGS_API_ENDPOINT="https://your-feature-flags-api.com"

# Build Configuration
ANALYZE="false"
BUILD_STANDALONE="false"

# Security
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# Email Service (if applicable)
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@yourdomain.com"

# Payment Processing (if applicable)
STRIPE_PUBLISHABLE_KEY="pk_live_your-stripe-key"
STRIPE_SECRET_KEY="sk_live_your-stripe-secret"

# File Storage (if applicable)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket"

# Redis (if applicable)
REDIS_URL="redis://localhost:6379"

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE="100"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"